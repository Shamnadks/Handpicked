<%- include('../layouts/admin/adminheader.ejs') %>


   


            <!-- Table Start -->
            
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">LIST OF CATEGORIES</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Actions</th>
                                          </tr>
                                    </thead>
                                    <tbody>
                                      <%if(category.length>0)  {%>
                                        <%for(let i=0;i <category.length; i++){%>
                                        <tr>
                                            <td><%= [i+1] %></td>
                                            <td><i class=" fa-lg text-danger me-3"></i> <strong><%= category[i].category %></strong></td>
                                            <td>
                                              <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                  <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                  <a class="dropdown-item" href="/categoryedit?id=<%=category[i]._id %>"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                  <a class="dropdown-item" href="/deletecategory?id=<%=category[i]._id %>" ><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                              </div>
                                            </td>
                                           
                                            
                                        </tr>
                                        <% } %>
                        
                                        <%}else{%>
                                            <tr>
                                                <td colspan="5">CATEGORY  NOT FOUND</td>
                            
                                            </tr>
                                           <% } %>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->
   


   



            <%- include('../layouts/admin/adminfooter.ejs') -%>