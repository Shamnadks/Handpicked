                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Mobile</th>
                                             <th scope="col">Actions</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <%if(users.length>0)  {%>
                                        <%for(let i=0;i <users.length; i++){%>
                                        <tr>
                                          <td><%= [i+1] %></td>
                                            <td><%= users[i].name %></td>
                                            <td><%= users[i].email %></td>
                                            <td><%= users[i].mobile %></td>
                                            <td>
                          
                                              <%if(users[i].blockStatus){ %>
                                              <a onclick="unBlock('<%=users[i]._id%>')" data-bs-toggle="modal" data-bs-target="#unblockBut" class="btn btn-success">unBlock</a>
                                             <% }else{%>
                                              <a onclick="Block('<%=users[i]._id%>')" data-bs-toggle="modal" data-bs-target="#blockBut"
                                                class="btn btn-danger">Block</a>
                                              <%}%>
                                        </td>
                                            
                                        </tr>
                                        <% } %>
                        
                                        <%}else{%>
                                            <tr>
                                                <td colspan="5">USER NOT FOUND</td>
                            
                                            </tr>
                                           <% } %>
                                        
                                    </tbody>
                                </table>
